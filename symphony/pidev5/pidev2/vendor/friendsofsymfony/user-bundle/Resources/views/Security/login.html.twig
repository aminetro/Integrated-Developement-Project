{%extends 'FreelanceFrontOfficeBundle::layout.html.twig' %}
 {% block content %} 
<center>
{% trans_default_domain 'FOSUserBundle' %}


{% if error %}
    <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
{% endif %}

<form action="{{ path("fos_user_security_check") }}" method="post">
    <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />

    <label for="username">Username</label>
    <input type="text" class="span3" id="username" name="_username" value="{{ last_username }}" required="required" />

    <label for="password">Password</label>
    <input type="password" class="span3" id="password" name="_password" required="required" />
    <br/>

    <input type="submit" id="_submit" name="_submit" value="Se Connecter" class="btn btn-primary btn-large"/>
</form>
    </center>
{% endblock %}