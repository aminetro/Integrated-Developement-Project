{%extends 'FreelanceFrontOfficeBundle::layout.html.twig' %}

 {% block content %} 
<div class="container">

					<div class="row">
<div class="span6">

    <div class="alert alert-success hidden" id="contactSuccess">
        <strong>Success!</strong> Your message has been sent to us.
    </div>

    <div class="alert alert-error hidden" id="contactError">
        <strong>Error!</strong> There was an error sending your message.
    </div>

    <h2 class="short"><strong>Envoyer Un Message </strong> </h2>
    <form  id="contactForm" method="post">
        <div class="row controls">
            <div class="span3 control-group">
            
          
             <label>{{form_label(form.sujet)}}</label>
              {{ form_widget(form.sujet) }}
          <label>{{form_label(form.message)}}</label>
              {{ form_widget(form.message) }}
          
          
          
     
 
     {{ form_rest(form)}}
 

                <div class="btn-toolbar">
                    <input type="submit" value="Envoyer Mon Message" class="btn btn-primary btn-large" data-loading-text="Loading...">

                </div>
           
             {{ form_rest(form)}}
   
     </div>
</div> </form>
</div></div></div>

 {% endblock %} 




